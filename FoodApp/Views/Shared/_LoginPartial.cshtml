@using Microsoft.AspNetCore.Identity
@*
    @using FoodApp.Areas.Identity.Data

*@


@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

 
 
@*<ul class="navbar-nav ">*@
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a id="manage" class="nav-link text-light" asp-area="" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline"asp-area="" asp-controller="Account" asp-action="Logout">
            <button id="logout" type="submit" class="nav-link btn btn-link ">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a id="manage" class="nav-link text-light" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
    </li>

        <li class="nav-item">
        <a id="manage" class="nav-link text-light" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
    </li>

}
@*</ul>*@
